<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />

    <link href="~/css/site.css" rel="stylesheet" />
    <link href="~/css/layout.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/bootstrap-duration-picker/dist/bootstrap-duration-picker.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/node_modules/%40fortawesome/fontawesome-free/css/all.css" rel="stylesheet" />
</head>
<body>
    <header class="container">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand"><i class="fas fa-running fa-lg" id="runningIcon"></i>James's Running Website</h1>
            <button class="navbar-toggler" data-toggle="collapse" data-target="#theMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="theMenu" navbar-collapse collapse>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Races">Races</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="App" asp-action="Runners">Runners</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="container">
        @RenderBody()
    </section>
    <footer class="footer-copyright text-center py-3">
        <div class="text-center">Copyright 2020 James Fitzgerald LLC</div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap-duration-picker/dist/bootstrap-duration-picker.js"></script>

    <script src="~/js/index.js"></script>
    <script src="~/js/races.js"></script>

    @RenderSection("scripts", false)
</body>
</html>